{
  "manifest_version": 3,
  "name": "Friends",
  "version": "1.3.0",
  "author": "Alex Kirk",
  "homepage_url": "https://github.com/akirk/friends-browser-extension",
  "description": "Companion to the WordPress plugin Friends. Display Feeds and rel=me locations. Follow Mastodon accounts, reply to toots. Send to Post Collection.",
  "icons": {
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "64": "icons/icon-64.png",
    "128": "icons/icon-128.png",
    "256": "icons/icon-256.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "preview.css",
        "rss.xsl",
        "icons/*.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "options_ui": {
    "page": "settings/options.html",
    "open_in_tab": true
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "19": "icons/icon-19.png",
      "38": "icons/icon-38.png"
    },
    "default_title": "Friends"
  },
  "background": {
    "service_worker": "background.js",
    "scripts": [
      "background.js"
    ]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{ee0abbe5-65ed-424e-8a85-79f0b0b2fdc3}",
      "strict_min_version": "57.0"
    }
  },
  "permissions": [
    "scripting",
    "storage",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "minimum_chrome_version": "88"
}
